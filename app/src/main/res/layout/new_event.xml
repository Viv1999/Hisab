<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFromLabelCardOutpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:textSize="18sp"
                android:layout_marginHorizontal="10dp"/>

            <EditText
                android:id="@+id/etFromCardOutpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter the source"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvToLabelCardOutpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"
                android:textSize="18sp"
                android:layout_marginHorizontal="10dp"/>

            <EditText
                android:id="@+id/etToCardOutpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter the distination"

                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLeaveDateLabelCardOutpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave date"
                android:textSize="18sp"
                android:layout_marginHorizontal="10dp"/>

            <EditText
                android:id="@+id/etLeaveDateCardOutpass"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:hint="Enter leave date"
                android:inputType="date|none"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLeaveDateCardOutpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return Date"
                android:layout_marginHorizontal="10dp"/>

            <EditText
                android:id="@+id/etReturnDateCardOutpass"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:hint="Enter return date"
                android:inputType="date|none"
                android:textSize="14sp" />
        </LinearLayout>


